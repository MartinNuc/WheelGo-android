<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/map"
                  android:layout_width="1px"
                  android:layout_height="1px"
                  android:name="com.google.android.gms.maps.SupportMapFragment"/>

        <LinearLayout
                android:id="@+id/curtainZoom"
                android:layout_width="100dip"
                android:layout_height="180dip"
                android:layout_alignParentTop="true"
                android:paddingTop="8dip"
                android:paddingBottom="8dip"
                android:paddingLeft="8dip"
                android:paddingRight="8dip"
                android:orientation="vertical"
                android:background="#55000000"
                android:clickable="true"
                android:gravity="right"
                android:layout_alignParentRight="true">

            <ImageButton
                    android:id="@+id/zoomIn_button"
                    android:text="+"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="ZoomIn_onClick"
                    android:layout_margin="2dip"
                    android:scaleType="fitCenter"
                    android:cropToPadding="true"
                    android:padding="10px"
                    android:src="@drawable/zoomin"
                    android:background="#99555555"></ImageButton>

            <ImageButton
                    android:id="@+id/zoomOut_button"
                    android:text="-"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:src="@drawable/zoomout"
                    android:layout_weight="1"
                    android:onClick="ZoomOut_onClick"
                    android:layout_margin="2dip"
                    android:scaleType="fitCenter"
                    android:padding="10px"
                    android:cropToPadding="true"
                    android:adjustViewBounds="true"
                    android:background="#99555555"></ImageButton>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/curtainMain"
                android:layout_width="fill_parent"
                android:layout_height="90dip"
                android:gravity="bottom"
                android:paddingTop="8dip"
                android:paddingBottom="8dip"
                android:paddingLeft="12dip"
                android:paddingRight="12dip"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:background="#55000000"
                android:clickable="true">

            <Button
                    android:id="@+id/center_button"
                    android:text="@string/centerbutton"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="CenterPositionButton_onClick"
                    android:layout_marginRight="15dip"
                    android:layout_marginLeft="10dip"
                    android:textSize="32px"></Button>

            <Button
                    android:id="@+id/reportProblem_button"
                    android:text="@string/reportProblem"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="ReportProblemButton_onClick"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="10dip"
                    android:textSize="32px"></Button>
        </LinearLayout>
    </RelativeLayout>

    <SlidingDrawer xmlns:android="http://schemas.android.com/apk/res/android"
                   android:id="@+id/slidingDrawer"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:gravity="center_horizontal"
                   android:handle="@+id/handle"
                   android:content="@+id/content"
                   android:rotation="180">
        <LinearLayout android:id="@+id/handle"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content">
            <ImageView android:id="@+id/imageView"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/ic_launcher"
                       android:rotation="180" />
        </LinearLayout>
        <Button
                android:id="@+id/reportProblem_button"
                android:text="@string/reportProblem"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:onClick="ReportProblemButton_onClick"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="10dip"
                android:textSize="32px"></Button>
    </SlidingDrawer>


</FrameLayout>
